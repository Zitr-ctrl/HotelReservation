@model SistemaHotel.Models.Habitacion

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<h1>Eliminar Habitación</h1>

<h3>¿Está seguro que desea eliminar esta habitación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Número de Habitación</dt>
        <dd class="col-sm-9">@Model.Numero</dd>
        
        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Model.Tipo</dd>
        
        <dt class="col-sm-3">Precio por Noche</dt>
        <dd class="col-sm-9">$@Model.PrecioPorNoche</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>