@model SistemaHotel.Models.Habitacion

@{
    ViewData["Title"] = "Crear Habitación";
}

<h1>Crear Nueva Habitación</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" placeholder="Ej: 101, 201A" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<SistemaHotel.Models.TipoHabitacion>()">
                    <option value="">-- Seleccione un tipo --</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Capacidad" class="control-label"></label>
                <input asp-for="Capacidad" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PrecioPorNoche" class="control-label"></label>
                <input asp-for="PrecioPorNoche" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="PrecioPorNoche" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Disponible" checked />
                <label class="form-check-label" asp-for="Disponible">
                    Disponible
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}