@model SistemaHotel.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1>Detalles del Cliente</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nombre Completo</dt>
        <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>
        
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        
        <dt class="col-sm-3">Tel√©fono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>
        
        <dt class="col-sm-3">Documento</dt>
        <dd class="col-sm-9">@Model.Documento</dd>
        
        <dt class="col-sm-3">Fecha de Registro</dt>
        <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>